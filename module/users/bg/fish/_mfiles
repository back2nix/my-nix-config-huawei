#compdef mfiles

_mfiles() {
  _arguments \
    '*-i[include pattern]:pattern:_files' \
    '*-t[file extensions]:extensions:' \
    '*-e[exclude pattern]:pattern:_files' \
    '*-p[include glob pattern]:pattern:' \
    '--keep-comments[preserve comments]' \
    '-r[recursive search]' \
    '-n[show line numbers]'
}
_mfiles "$@"
